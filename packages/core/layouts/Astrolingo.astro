---
import BaseLayout from "./BaseLayout.astro"
import Header from "./Header.astro"
import Footer from "./Footer.astro"
/**
 * Layout used for most pages of the site.
 */
interface Props {
  title: string
  description: string
  showSidebarInMobile?: boolean
}

const { title, description, showSidebarInMobile = false } = Astro.props
---

<BaseLayout {title} {description}>
  <Header {showSidebarInMobile} />
  <div class="flex">
    <aside class="m-5 hidden w-[200px] flex-col text-sm lg:flex">
      <slot name="sidebar" />
    </aside>
    <slot />
    <aside class="m-5 hidden w-[200px] flex-col text-sm xl:flex">
      <slot name="navigation" />
    </aside>
  </div>
  <Footer />
</BaseLayout>
